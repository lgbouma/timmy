@article{berger_gaia-kepler_2020,
	title = {The {Gaia}-{Kepler} {Stellar} {Properties} {Catalog}. {II}. {Planet} {Radius} {Demographics} as a {Function} of {Stellar} {Mass} and {Age}},
	volume = {2005},
	url = {http://adsabs.harvard.edu/abs/2020arXiv200514671B},
	abstract = {Studies of exoplanet demographics require large samples and precise 
	constraints on exoplanet host stars. Using the homogeneous Kepler
	stellar properties derived using Gaia Data Release 2 by Berger et al.
	(2020), we re-compute Kepler planet radii and incident fluxes and
	investigate their distributions with stellar mass and age. We measure
	the stellar mass dependence of the planet radius valley to be \$d {\textbackslash}log
	R\_\{{\textbackslash}mathrm\{p\}\}\$/\$d {\textbackslash}log M\_{\textbackslash}star = 0.26{\textasciicircum}\{+0.21\}\_\{-0.16\}\$, consistent with
	the slope predicted by a planet mass dependence on stellar mass
	(\$0.24-0.35\$) and core-powered mass-loss (0.33). We also find first
	evidence of a stellar age dependence of the planet populations
	straddling the radius valley. Specifically, we determine that the
	fraction of super-Earths (\$1-1.8 {\textbackslash}mathrm\{R\_{\textbackslash}oplus\}\$) to sub-Neptunes
	(\$1.8-3.5 {\textbackslash}mathrm\{R\_{\textbackslash}oplus\}\$) increases from \$0.61 {\textbackslash}pm 0.09\$ at young
	ages ({\textless} 1 Gyr) to \$1.00 {\textbackslash}pm 0.10\$ at old ages ({\textgreater} 1 Gyr),
	consistent with the prediction by core-powered mass-loss that the
	mechanism shaping the radius valley operates over Gyr timescales.
	Additionally, we find a tentative decrease in the radii of relatively
	cool (\$F\_\{{\textbackslash}mathrm\{p\}\} {\textless} 150 {\textbackslash}mathrm\{F\_{\textbackslash}oplus\}\$) sub-Neptunes over Gyr
	timescales, which suggests that these planets may possess H/He envelopes
	instead of higher mean molecular weight atmospheres. We confirm the
	existence of planets within the hot sub-Neptunian "desert" (\$2.2 {\textless}
	R\_\{{\textbackslash}mathrm\{p\}\} {\textless} 3.8 {\textbackslash}mathrm\{R\_{\textbackslash}oplus\}\$, \$F\_\{{\textbackslash}mathrm\{p\}\} {\textgreater} 650
	{\textbackslash}mathrm\{F\_{\textbackslash}oplus\}\$) and show that these planets are preferentially
	orbiting more evolved stars compared to other planets at similar
	incident fluxes. In addition, we identify candidates for cool
	(\$F\_\{{\textbackslash}mathrm\{p\}\} {\textless} 20 {\textbackslash}mathrm\{F\_{\textbackslash}oplus\}\$) inflated Jupiters, present
	a revised list of habitable zone candidates, and find that the ages of
	single- and multiple-transiting planet systems are statistically
	indistinguishable.},
	urldate = {2020-07-13},
	journal = {arXiv e-prints},
	author = {Berger, Travis A. and Huber, Daniel and Gaidos, Eric and van Saders, Jennifer L. and Weiss, Lauren M.},
