	pages = {1768},
	file = {Full Text PDF:/Users/luke/Zotero/storage/2ZEYVVBB/Mardling - 2007 - Long-term tidal evolution of short-period planets .pdf:application/pdf;Snapshot:/Users/luke/Zotero/storage/BPXW6GKI/ui.adsabs.harvard.edu.html:text/html}
}

