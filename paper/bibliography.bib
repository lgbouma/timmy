	journal = {Protostars and Planets V},
	author = {Brice\~no, C. and Preibisch, T. and Sherry, W. H. and Mamajek, E. A. and Mathieu, R. D. and Walter, F. M. and Zinnecker, H.},
	year = {2007},
	pages = {345--360},
