	journal = {\apj},
	author = {Ansdell, M. and Gaidos, E. and Rappaport, S. A. and Jacobs, T. L. and LaCourse, D. M. and Jek, K. J. and Mann, A. W. and Wyatt, M. C. and Kennedy, G. and Williams, J. P. and Boyajian, T. S.},
