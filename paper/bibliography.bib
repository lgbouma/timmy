@article{giacalone_triceratops_2020,
	title = {\${\textbackslash}texttt\{triceratops\}\$: {A} {Tool} for {Rapid} {Validation} of \${\textbackslash}textit\{{TESS}\}\$ {Objects} of {Interest} and {Application} to 424 {Planet} {Candidates}},
