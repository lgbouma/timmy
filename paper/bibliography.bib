@article{wang_influence_2015,
	title = {Influence of {Stellar} {Multiplicity} {On} {Planet} {Formation}. {III}. {Adaptive} {Optics} {Imaging} of {Kepler} {Stars} {With} {Gas} {Giant} {Planets}},
