	journal = {\actaa},
	author = {Maciejewski, G. and Fern\'andez, M. and Aceituno, F. and Mart\'in-Ruiz, S. and Ohlert, J. and Dimitrov, D. and Szyszka, K. and von Essen, C. and Mugrauer, M. and Bischoff, R. and Michel, K.-U. and Mallonn, M. and Stangret, M. and Moździerski, D.},
